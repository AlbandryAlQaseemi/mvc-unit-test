
@{
    var Plants = (List<Plant>)ViewData["Plants"];

}
<h1 style="color:whitesmoke; font-family:'Comic Sans MS';margin-left:400px">Plants Garden</h1>
<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel" style="height: 500px; width: 550px;margin-left:280px; margin-top:30px">
    <div class="carousel-inner">
        @{
            var first = true;
        }
        @foreach (var item in Plants)
        {
            <div class="carousel-item @(first?Html.Raw("active"):Html.Raw(""))" style="  height:500px; width:550px">

                <img src="@item.Image" class="d-block w-100" height="500" alt="flower">
                <div class="carousel-caption d-none d-md-block" style="color:whitesmoke; text-shadow:2px 2px 4px #000000">
                    <h3 class="card-title">@item.Name</h3>
                    <a class="btn-outline-light " style="color: whitesmoke; text-shadow: 2px 2px 4px #000000" href="/Plants/Details/@item.ID" role="link">Care</a>
                </div>
            </div>

            first = false;
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button"
       data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button"
       data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

